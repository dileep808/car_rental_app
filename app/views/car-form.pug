doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title + " | Velocity Rentals"

    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    link(rel="stylesheet", href="/home.css")
    link(rel="stylesheet", href="/dashboard.css")

  include sidebar.pug

  body
    .sidebar-shell
      +sidebar('dashboard')

      main.sidebar-content.dashboard
        section.hero
          .container
            .hero-content.dashboard-hero
              .eyebrow Fleet
              h1= title
              p Enter accurate vehicle details to manage pricing and availability.
              .quick-actions
                a.btn.btn-outline(href="/dashboard#fleet")
                  i.fas.fa-arrow-left
                  |  Back to Fleet

        section
          .container
            .card
              .section-title
                h2 Vehicle information
                p Keep details correct to avoid booking issues.

              form(method="post", action=action)
                .form-grid

                  .form-group
                    label(for="make") Make
                    input#make.form-control(
                      type="text",
                      name="make",
                      value=car.make || "",
                      placeholder="e.g. Tesla",
                      required
                    )

                  .form-group
                    label(for="model") Model
                    input#model.form-control(
                      type="text",
                      name="model",
                      value=car.model || "",
                      placeholder="e.g. Model 3",
                      required
                    )

                  .form-group
                    label(for="year") Year
                    input#year.form-control(
                      type="number",
                      name="year",
                      value=car.year || "",
                      placeholder="2024",
                      required
                    )

                  .form-group
                    label(for="daily_rate") Daily rate (£)
                    input#daily_rate.form-control(
                      type="number",
                      step="0.01",
                      name="daily_rate",
                      value=car.daily_rate || "",
                      placeholder="120.00",
                      required
                    )

                  .form-group
                    label(for="location") Location
                    input#location.form-control(
                      type="text",
                      name="location",
                      value=car.location || "",
                      placeholder="London Central"
                    )

                  .form-group
                    label(for="status") Status
                    select#status.form-control(name="status")
                      option(value="available", selected=car.status === "available") Available
                      option(value="booked", selected=car.status === "booked") Booked
                      option(value="maintenance", selected=car.status === "maintenance") Maintenance

                .form-actions
                  button.btn.btn-primary(type="submit")
                    i.fas.fa-save
                    |  Save Vehicle

                  a.btn.btn-outline(href="/dashboard#fleet") Cancel

    footer
      .container.footer-meta
        span Velocity Rentals
        span •
        span Fleet management
